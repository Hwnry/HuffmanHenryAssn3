<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/my_lightBlue" />
      <stroke
          android:width="1dp"
          android:color="@color/my_darkRed" />
      <corners
          android:radius="6dp" />
      <padding
             android:left="10dp"
             android:top="10dp"
             android:right="10dp"
             android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/my_lightBlue"
          android:endColor="@color/my_darkRed"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/my_darkRed" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>